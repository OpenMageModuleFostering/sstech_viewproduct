<?xml version="1.0"?>
<config>
	<modules>
		<SSTech_ViewProduct>
			<version>1.0.1</version>
		</SSTech_ViewProduct>
	</modules>
	<global>
		<blocks>
			<viewProduct>
				<class>SSTech_ViewProduct_Block</class>
			</viewProduct>
		</blocks>
		<helpers>
      <viewproduct>
        <class>SSTech_ViewProduct_Helper</class>
      </viewproduct>
    </helpers>
	</global>
	<adminhtml>
		<layout>
			<updates>
				<viewProduct>
					<file>viewproduct.xml</file>
				</viewProduct>
			</updates>
		</layout>

    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <inchoo>
                                        <title>SSTech</title>
                                    </inchoo>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
</adminhtml>
</config>